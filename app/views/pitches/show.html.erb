<div class='container-fluid' style='max-width: 750px; background-color: #ffffff; border-radius: 25px; padding: 20px'>
    <div>
        <b>Title: </b><%= @pitch.title %><br>
        <b>Genius: </b><%= @pitch.genius.first_name %> <%= @pitch.genius.last_name %><br>
        <b>The Pitch: </b><br><%= @pitch.description %><br>
        <b>Category: </b><%= @pitch.category %><br>
        <b>Funding Start Date: </b><%= @pitch.funding_start_date %><br>
        <b>Funding End Date: </b><%= @pitch.funding_end_date %><br>
        <b>Total Funding: </b><%= @pitch.total_funding %><br>
        <b>Funding Goal: </b><%= @pitch.funding_goal %><br>


            <div class='row no-gutters' style='padding-top: 5px'>
                <div class='col-auto'>
                    <%= button_to "Back", pitches_path, {method: 'get', class: 'btn btn-default btn-md btn-primary'} %>
                </div>
                <div class='col-auto' style='padding-left: 6px; padding-right: 6px;'>
                    <%= button_to "Fund", pitches_path, {method: 'get', class: 'btn btn-default btn-md btn-success'} %>
                </div>
                <div class='col-auto'>
                    <%= button_to "Save", pitches_path, {method: 'get', class: 'btn btn-default btn-md btn-warning'} %>
                </div>
            </div>

        <br>
    </div>
</div>